{
    "name": "drg-net",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--gpus",
        "all",
        "--shm-size=4g"
    ],
    "postCreateCommand": "pip install -e '.[dev,notebook]'",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter",
                "GitHub.copilot",
                "eamodio.gitlens",
                "redhat.vscode-yaml",
                "njpwerner.autodocstring",
                "ms-toolsai.jupyter",
                "charliermarsh.ruff",
                "tamasfe.even-better-toml"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    }
}
